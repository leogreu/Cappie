{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2020",
        "module": "es2022",
        "moduleResolution": "bundler",
        "lib": ["DOM", "ESNext", "WebWorker"],
        "strict": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "paths": {
            "persistence/*": ["./src/persistence/*"],
            "components/*": ["./src/components/*"],
            "stores/*": ["./src/stores/*"],
            "utils/*": ["./src/utils/*"]
        },
        "types": ["vite/client"]
    }
}
